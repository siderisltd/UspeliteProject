@model Uspelite.Web.Areas.Administration.Models.Crawlers.CrowlerViewModel

@using (Html.BeginForm("StartPopulation", "Crowlers", FormMethod.Post, new { id = "start-populating-form" }))
{
    @Html.LabelFor(x => x.Crawlers, new { @class = "col-lg-2 control-label" })
    @Html.DropDownListFor(x => x.Crawlers, new SelectList(Model.Crawlers, "Id", "Name", Model.Crawlers.FirstOrDefault()), new { @class = "btn btn-default dropdown-toggle" })

    <input type="submit" class="btn btn-warning"/>
}




