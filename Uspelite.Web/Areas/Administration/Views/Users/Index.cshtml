
@using Uspelite.Web.Areas.Administration.Models.Users

@model Uspelite.Web.Areas.Administration.Models.Users.UserViewModel

@(Html.FullFeaturedGrid<UserViewModel>("Users", x => x.Id, columns =>
{
    columns.Bound(col => col.Id);
    columns.Bound(col => col.Username);
    columns.Bound(col => col.FullName);
    columns.Bound(col => col.Email);
    columns.Bound(col => col.Posts);
    columns.Bound(col => col.Videos);
    columns.Bound(col => col.CreatedOn);
    columns.Bound(col => col.Password).Hidden(true);
    columns.Command(c => c.Destroy());
}))

@section overridingStyles {
    <style>
        .k-grid{
            width: 960px;
        }
    </style>
}