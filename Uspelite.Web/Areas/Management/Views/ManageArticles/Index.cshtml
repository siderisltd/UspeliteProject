
@using Uspelite.Web.Areas.Management.Models
@model Uspelite.Web.Areas.Management.Models.ManageArticleViewModel

@(Html.FullFeaturedGrid<ManageArticleViewModel>("ManageArticles", x => x.Id, column =>
{
    column.Bound(x => x.Id).Hidden();
    column.Bound(x => x.Title);
    column.Bound(x => x.Category).ClientTemplate("#= Category.Title #");
    column.Bound(x => x.Status);
    column.Bound(x => x.Author);
    column.Bound(x => x.CreatedOn).Format("{0:yyyy.dd.MM hh:mm:ss}");
    column.Bound(x => x.Place);
    column.Command(c => c.Edit());
    column.Command(c => c.Destroy());
}))

