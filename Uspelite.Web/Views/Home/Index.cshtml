@model Uspelite.Web.Models.Home.HomeIndexViewModel

@{
    ViewBag.Title = "Home";
}

@section slider{
    @(Html.Action<ChildActionsController>(x => x.GetSlider()))
}

@section sidebar{
    @(Html.Action<ChildActionsController>(x => x.GetSideBar()))
}

<div class="row">
<div class="col-md-9 separator-right">
    <article class="linkbox large cat-news">
        <a href="/@Model.TopArticle.Slug">
            @Html.Image(x => Model.TopArticle.MainArticlePic.Resized400Picture, "Alt responsive picture", "560", "390", new {@class = "img-responsive"})
            <div class="overlay">
                <h2>@Html.Raw(Model.TopArticle.SanitizedTitle)</h2>
            </div>
        </a>
        <a href="/Categories/Show/@Model.TopArticle.Category" class="theme">@Model.TopArticle.Category</a>
    </article>


    @{ int linesCounter = 0; }

    @foreach (var post in Model.NewestPosts)
    {
        if (linesCounter%2 == 0)
        {
            @: <div class="row">
        }
        <div class="col-sm-6">
            <article class="linkbox cat-sports">
                <a href="~/@post.Slug">
                    @Html.Image(x => post.MainArticlePic.Resized400Picture, "Alt responsive picture", "265", "160", new {@class = "img-responsive" })

                    <div class="overlay">
                        <h3>@post.Title</h3>
                    </div>
                </a>
                <a href="/Categories/Show/@post.Category" class="theme">@post.Category</a>
            </article>
            @Html.Partial("~/Views/Shared/Partials/_RatingStars.cshtml", post)
        </div>
        if (linesCounter%2 != 0)
        {
            @: </div>
        }

        linesCounter++;
    }

    <section class="section-full cat-videos no-padding">
        <div class="row">
            <div class="col-sm-8">

                <article class="linkbox cat-showtime">
                    <a href="~/@Model.TopArticle.Slug">
                        @Html.Image(x => Model.TopArticle.MainArticlePic.Resized400Picture, "Alt responsive picture", "334", "301", new {@class = "img-responsive"})
                        <div class="overlay">
                            <h2>@Html.Raw(Model.TopArticle.SanitizedTitle)</h2>
                        </div>
                    </a>
                    <a href="/Categories/Show/@Model.TopArticle.Category" class="theme">@Model.TopArticle.Category</a>
                </article>
                @Html.Partial("~/Views/Shared/Partials/_RatingStars.cshtml", @Model.TopArticle)
            </div>

            <div class="col-sm-4">
                @for (int i = 0; i < 2; i++)
                {
                    var current = Model.HighRatedPosts[i];
                    <article class="linkbox cat-showtime">
                        <a href="/@current.Slug">
                            @Html.Image(x => current.MainArticlePic.Resized400Picture, "Alt responsive picture", "274", "150", new {@class = "img-responsive"})
                            <div class="overlay">
                                <h3>@Html.Raw(current.SanitizedPartialContent)</h3>
                            </div>
                        </a>
                        <a href="/Categories/Show/@current.Category" class="theme">@current.Category</a>
                    </article>
                    @Html.Partial("~/Views/Shared/Partials/_RatingStars.cshtml", @Model.TopArticle)
                }
            </div>
        </div>
    </section>

    <section class="section-full top-padding cat-reviews news-layout news-lay-2">
        <header>
            <h2>Най-коментирани статии</h2>
            <span class="borderline"></span>
        </header>

        <div class="row">
            @for (int i = 0; i < 4; i++)
            {
                var current = Model.MostCommentedPosts[i];

                <div class="col-xs-6 col-sm-3">
                    <article class="review">
                        <a href="/@current.Slug">
                            @Html.Image(x => current.MainArticlePic.Resized400Picture, "Alt responsive picture", "120", "105", new {@class = "img-responsive"})
                            <h3>@Html.Raw(current.Title)</h3>
                        </a>

                        @Html.Partial("~/Views/Shared/Partials/_RatingStars.cshtml", current)

                    </article>
                </div>
            }
        </div>
    </section>

