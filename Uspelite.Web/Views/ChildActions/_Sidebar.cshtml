@using System.Globalization
@model IList<Uspelite.Web.Models.ChildActions.CategoryAndPostsViewModel>

<div id="sidebar">

    <!-- start:advertising -->
    <div class="ad">
        <a href=""><img src="~/Content/Theme/images/dummy/banner_300x250.png" width="300" height="250" alt=""></a>
    </div>
    <!-- end:advertising -->




<!-- start:section-module- -->
    <section class="module-news top-margin">
        <!-- start:header -->
        <header>
            <h2>Don't miss this stories</h2>
            <span class="borderline"></span>
        </header>
        <!-- end:header -->
        <div class="article-container">
            @for (int i = 0; i < 3; i++)
            {
                var category = Model[i].CategoryName;
                foreach (var post in Model[i].Posts)
                {
                    <article class="clearfix">
                        <a href="#">@Html.Image(x => post.MainArticlePic.Url, "Alt responsive picture", "100", "80")</a>
                        <span class="published">@post.CreatedOn.ToString("MMMM dd yyyy", CultureInfo.InvariantCulture)<span class="category cat-sports"><a href="#">@category</a></span></span>
                        <h3>
                            <a href="#">@post.PartialContent</a>
                        </h3>
                    </article>
                }
            }
        </div>
        <!-- end:article-container -->
    </section>
    <!-- end:section-module-news -->
    <!-- start:advertising -->
    <div class="ad ad-separator">
        <a href=""><img src="~/Content/Theme/images/dummy/banner_300x250.png" width="300" height="250" alt=""></a>
