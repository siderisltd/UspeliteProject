@using System.Globalization
@model IList<Uspelite.Web.Models.ChildActions.CategoryAndPostsViewModel>

<div id="sidebar">

    <div class="ad">
        <a href=""><img src="~/Content/Theme/images/dummy/banner_300x250.png" width="300" height="250" alt=""></a>
    </div>


    <section class="module-news top-margin">
        <header>
            <h2>Don't miss this stories</h2>
            <span class="borderline"></span>
        </header>
        <!-- end:header -->
        <div class="article-container">
            @for (int i = 0; i < 3; i++)
            {
                var category = Model[i].CategoryName;
                foreach (var post in Model[i].Posts)
                {
                    <article class="clearfix">
                        <a href="/Articles/Show/@post.Slug">@Html.Image(x => post.MainArticlePic.Resized400Picture, "Alt responsive picture", "100", "80")</a>
                        <span class="published">@Html.DisplayFor(x => post.CreatedOn)<span class="category cat-sports">@Html.ActionLink(@category, "Show", "Categories", new {slug = category}, null)</span></span>
                        <h3>
                            <a href="/Articles/Show/@post.Slug">@post.SanitizedPartialContent</a>
                        </h3>
                    </article>
                }
            }
        </div>
    </section>

    <div class="ad ad-separator">
        <a href=""><img src="~/Content/Theme/images/dummy/banner_300x250.png" width="300" height="250" alt=""></a>
    </div>

    <section class="module-photos">
        <header>
            <h2>Weekly photos</h2>
            <span class="borderline"></span>
        </header>
        <div id="weekly-gallery" class="article-container">
            <div class="row">
                <article class="clearfix">
                    <p>Aliquam sollicitudin, enim sit amet hendrerit consequat, velit orci posuere elit, eu facilisis lacus odio ac nunc. </p>
                    <a href="~/Content/Theme/images/dummy/photo-big.jpg">
                        <img src="~/Content/Theme/images/dummy/300x200.jpg" width="300" height="200" alt="Responsive image" class="img-responsive" />
                    </a>
                </article>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <article class="clearfix">
                        <a href="~/Content/Theme/images/dummy/photo-big.jpg"><img src="~/Content/Theme/images/dummy/100x80_2.jpg" width="100" height="80" alt="Responsive image" class="img-responsive" /></a>
                    </article>
                </div>
                <div class="col-xs-4">
                    <article class="clearfix">
                        <a href="~/Content/Theme/images/dummy/photo-big.jpg"><img src="~/Content/Theme/images/dummy/100x80_2.jpg" width="100" height="80" alt="Responsive image" class="img-responsive" /></a>
                    </article>
                </div>
                <div class="col-xs-4">
                    <article class="clearfix">
                        <a href="~/Content/Theme/images/dummy/photo-big.jpg"><img src="~/Content/Theme/images/dummy/100x80_2.jpg" width="100" height="80" alt="Responsive image" class="img-responsive" /></a>
                    </article>
                </div>
            </div>
        </div>
    </section>
</div>
