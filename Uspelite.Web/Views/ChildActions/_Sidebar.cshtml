@using System.Globalization
@model IList<Uspelite.Web.Models.ChildActions.CategoryAndPostsViewModel>

<div id="sidebar">

    <div class="ad">
        <a href=""><img src="~/Content/Theme/images/dummy/banner_300x250.png" width="300" height="250" alt=""></a>
    </div>
	
	<section class="donation-section">
		<button class="btn btn-default donate-button" type="button">
		Почерпете ни чаша кафе
		<span></span>
		</button>
	</section>
	
	<section>
		<header>
            <h2>В социалните мрежи</h2>
            <span class="borderline"></span>
        </header>
		<div class="essbfc-container essbfc-nospace essbfc-col-3 essbfc-template-metro">
			<ul>
				<li class="essbfc-facebook">
					<a href="https://www.facebook.com/envato" target="_blank" rel="nofollow">
						<div class="essbfc-network"><i class="essbfc-icon essbfc-icon-facebook essbfc-icon-buzz-out"></i><span class="essbfc-followers-count">179k</span><span class="essbfc-followers-text">Фена</span>
						</div>
					</a>
				</li><!--
				--><li class="essbfc-twitter">
					<a href="https://www.twitter.com/appscreo" target="_blank" rel="nofollow">
						<div class="essbfc-network"><i class="essbfc-icon essbfc-icon-twitter essbfc-icon-buzz-out"></i><span class="essbfc-followers-count">103</span><span class="essbfc-followers-text">Последователи</span>
						</div>
					</a>
				</li><!--
				--><li class="essbfc-google">
					<a href="https://plus.google.com/+android" target="_blank" rel="nofollow">
						<div class="essbfc-network"><i class="essbfc-icon essbfc-icon-google essbfc-icon-buzz-out"></i><span class="essbfc-followers-count">27.8M</span><span class="essbfc-followers-text">Фена</span>
						</div>
					</a>
				</li><!--
				--><li class="essbfc-linkedin">
					<a href="https://www.linkedin.com/company/envato" target="_blank" rel="nofollow">
						<div class="essbfc-network"><i class="essbfc-icon essbfc-icon-linkedin essbfc-icon-buzz-out"></i><span class="essbfc-followers-count">8.4k</span><span class="essbfc-followers-text">Последователи</span>
						</div>
					</a>
				</li><!--
				--><li class="essbfc-mailchimp">
					<a href="http://list.to.address" target="_blank" rel="nofollow">
						<div class="essbfc-network"><i class="essbfc-icon essbfc-icon-mailchimp essbfc-icon-buzz-out"></i><span class="essbfc-followers-count">268</span><span class="essbfc-followers-text">Абоната</span>
						</div>
					</a>
				</li><!--
				--><li class="essbfc-instagram">
					<a href="http://instagram.com/envato" target="_blank" rel="nofollow">
						<div class="essbfc-network"><i class="essbfc-icon essbfc-icon-instagram essbfc-icon-buzz-out"></i><span class="essbfc-followers-count">4.6k</span><span class="essbfc-followers-text">Последователи</span>
						</div>
					</a>
				</li>
			</ul>
		</div>
	</section>

    <section class="module-news top-margin">
        <header>
            <h2>Не изпускайте тези истории</h2>
            <span class="borderline"></span>
        </header>
        <!-- end:header -->
        <div class="article-container">
            @for (int i = 0; i < 3; i++)
            {
                var category = Model[i].CategoryName;
                foreach (var post in Model[i].Posts)
                {
                    <article class="clearfix">
                        <a href="/@post.Slug">@Html.Image(x => post.MainArticlePic.Resized400Picture, "Alt responsive picture", "100", "80")</a>
                        <span class="published">@Html.DisplayFor(x => post.CreatedOn)<span class="category cat-sports">@Html.ActionLink(@category, "Show", "Categories", new {slug = category}, null)</span></span>
                        <h3>
                            <a href="/@post.Slug">@Html.Raw(post.SanitizedPartialContent)</a>
                        </h3>
                    </article>
                }
            }
        </div>
    </section>

    <div class="ad ad-separator">
        <a href=""><img src="~/Content/Theme/images/dummy/banner_300x250.png" width="300" height="250" alt=""></a>
    </div>
</div>
