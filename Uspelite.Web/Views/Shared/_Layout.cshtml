<body>
<div id="page-outer-wrap">
    <div id="page-inner-wrap">

        @Html.Partial("~/Views/Shared/Partials/_Header.cshtml");

        @if (this.TempData["Notification"] != null)
        {
            <div class="alert alert-success notification-label" role="alert">@this.TempData["Notification"]</div>
        }
        @RenderSection("slider", required: false)

        <div class="container">
            <div id="page-content">
                <div id="main">
                    @RenderBody()
                </div>
                @RenderSection("sidebar", required: false)
            </div>
        </div>
        <div class="clearfix"></div>
        @Html.Partial("~/Views/Shared/Partials/_Footer.cshtml")
    </div>
