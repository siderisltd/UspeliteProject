    <link href='http://fonts.googleapis.com/css?family=Roboto:400,500,500italic,400italic,700,700italic%7CRoboto+Condensed:400,700%7CRoboto+Slab' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")


    @RenderSection("styles", required: false)
    @Styles.Render("~/theme/styles")
    @Styles.Render("~/site/styles")
    <link href="~/Content/Custom/DonationButton.css" rel="stylesheet" />
    <link href="~/Content/Custom/SharingButtons.css" rel="stylesheet" />
    <link href="~/Content/Custom/SomeStyles.css" rel="stylesheet" />
    <link href="~/Content/Custom/teamPageStyles.css" rel="stylesheet" />
    @RenderSection("overridingStyles", required: false)

    <!-- start:stylesheets -->
    <!-- end:stylesheets -->
    <!--[if lte IE 8]>
        <script src="~/Scripts/Libraries/respond.js"></script>
    <![endif]-->
    <!--[if lt IE 9]>
        <link rel="stylesheet" href="~/Content/Theme/styles/photobox.ie.css">
        <script src="~/Scripts/Libraries/html5shiv.js"></script>
    <![endif]-->
</head>
<body>
    <div id="fb-root"></div>
    <div id="page-outer-wrap">
        <div id="page-inner-wrap">

            @Html.Partial("~/Views/Shared/Partials/_Header.cshtml");

            @if (this.TempData["Alert"] != null)
            {
                <div class="alert alert-danger notification-label" role="alert">@this.TempData["Alert"]</div>
            }
            @if (this.TempData["Notification"] != null)
            {
                <div class="alert alert-success notification-label" role="alert">@this.TempData["Notification"]</div>
            }
            @RenderSection("slider", required: false)

            <div class="container">
                <div id="page-content">
                    <div id="main">
                        @RenderBody()
                    </div>
                    @RenderSection("sidebar", required: false)
                </div>
            </div>
            <div class="clearfix"></div>
            @Html.Partial("~/Views/Shared/Partials/_Footer.cshtml")
        </div>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/theme")
    @Scripts.Render("~/bundles/ajax")
    @*<script src="https://apis.google.com/js/platform.js" async defer></script>*@
    @RenderSection("scripts", required: false)


    <script>
        $(function () {
            var $mainElement = $('#main');
            var mainElementHeight = $mainElement.height() + $mainElement.offset().top;
            var sideBarArticles = $('#sidebar article');

            var elHeights = sideBarArticles.each(function (index, element) {
                var el = $(element);
                var currentOffset = el.offset().top;
                if (currentOffset > mainElementHeight) {
                    var prevEl = el.prev().prev();
                    prevEl.nextAll('*').hide();
                    return false;
                }
            });

        });

    </script>
    <script>
        $(function () {
            var notificationLabel = $('.notification-label');
            if (notificationLabel.length !== 0) {
                notificationLabel.delay(3000).fadeOut(200);
            }
        });
    </script>
</body>
</html>
