@using Uspelite.Data.Common.Roles

@if (User.Identity.IsAuthenticated)
{
    if (!User.IsInRole(AppRoles.CLIENT_ROLE) || (User.IsInRole(AppRoles.EDITOR_ROLE) || User.IsInRole(AppRoles.ADMIN_ROLE) || User.IsInRole(AppRoles.MANAGER_ROLE) || User.IsInRole(AppRoles.ULTIMATE_ROLE)))
    {
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (User.IsInRole(AppRoles.ADMIN_ROLE) || User.IsInRole(AppRoles.ULTIMATE_ROLE))
                        {
                            <li class="active"><a href="/Administration/Home">Administration</a></li>
                        }
                        @if (User.IsInRole(AppRoles.MANAGER_ROLE) || User.IsInRole(AppRoles.ULTIMATE_ROLE))
                        {
                            <li><a href="/Management/ManageArticles">Management</a></li>
                        }
                        @if (User.IsInRole(AppRoles.MANAGER_ROLE) || User.IsInRole(AppRoles.EDITOR_ROLE) || User.IsInRole(AppRoles.ULTIMATE_ROLE))
                        {
                            <li><a href="/Articles/Add">Add article</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    }
}

<div class="top-nav"> 
	<div class="container">
		<nav class="top">
			<ul class="inline">
				<li class="topnav"><a href="/">ИНИЦИАТИВИ</a></li>
				<li class="topnav"><a href="/">ВЪЗМОЖНОСТИ</a></li>
				<li class="topnav"><a href="/">КОИ СМЕ НИЕ?</a></li>
				<li class="topnav"><a href="/">ПАРТНЬОРИ</a></li>
			</ul>
			<div class="login">
			@Html.Partial("~/Views/Shared/_LoginPartial.cshtml")
			</div>
		</nav>
	</div>
</div>

<header id="page-header" class="hidden-xs">
    <div id="header-branding">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <h1>
                        <a href="~/"><img id="logo-img" src="~/Content/Pics/100x67white-transperant.png" alt="Успелите"></a> 
						<span class="heading">Uspelite.bg</span>
                    </h1>
                </div>
                <div class="col-sm-6 col-md-4 text-center">
                    
                    <!-- start search -->
                    <div class="search-form-wrapper col-sm-4">
                        <form id="search-form" name="search-form">
                            <div class="input-group">
                                <input class="form-control" name="qsearch" placeholder="Търсете..." type="text"/>
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <!-- end search -->

                </div>
            </div>
        </div>
    </div>

    <div id="header-navigation">
        @(Html.Action<ChildActionsController>(x => x.GetClientNavigation()))
    </div>
</header>